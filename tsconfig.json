{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}